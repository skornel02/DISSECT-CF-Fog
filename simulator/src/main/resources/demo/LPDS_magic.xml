	<!-- magic vm many cores, many processing and 256Tb memory -->
	<machine id="magicPM" cores="9999" processing="100" memory="2560000000000000">
		<powerstates kind="host">
			<power
				model="hu.mta.sztaki.lpds.cloud.simulator.energy.powermodelling.LinearConsumptionModel"
